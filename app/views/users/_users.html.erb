<table border="1">
  <tr>
    <th>ID</th>
    <th>name</th>
    <th>email</th>
    <th>role</th>
    <th>creator_id</th>
    <th colspan = '3'>Options</th>
  </tr>

  <tbody>
    <% if users.nil? %>
      <strong> No user(s) yet</strong>
    <% else %>
      <% users.each do |user| %>
        <tr>
          <td><%= user.id %></td>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td><%= user.role %></td>
          <td><%= user.creator_id %></td>
          <% if can? :read, user %>
            <td><%= link_to 'Show user', user_url(user) %></td>
          <% end %>
          <% if can? :update, user %>
            <td><%= link_to 'Edit user', edit_user_url(user) %></td>
          <% end %>
          <% if can? :delete, user %>
            <td><%= link_to 'Delete user', user_url(user), method: :delete %></td>
          <% end %>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
