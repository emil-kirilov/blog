<!DOCTYPE html>
<html>
  <head>
    <title>Blog</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <% if current_user %>
      <%= link_to("Log out", destroy_user_session_url, method: :delete) %>
      <%= link_to("Create new user", new_user_url) unless current_user.user? %>
      <%= link_to("User info", user_url(current_user)) %>
      <%= link_to("New upload", user_new_file_url(current_user)) %>
    <% else %>
      <%= link_to("Log in", new_user_session_url) %>
    <% end %>
    <%= yield %>
  </body>
</html>
